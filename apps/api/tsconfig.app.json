{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "ES2021",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../../",
    "paths": {
      "@task-management-system/data": ["libs/data/src/index.ts"],
      "@task-management-system/auth": ["libs/auth/src/index.ts"]
    }
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}

